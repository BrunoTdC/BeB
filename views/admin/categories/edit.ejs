<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/navbar.ejs'); %>
<div class="container">
    <a class="btn btn-primary mb-3" href="/admin/categories/">Voltar</a>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="title_principal">EDITAR CATEGORIA</h1>     
                </div>
                <div class="card-body">
                    <form action="/categories/update" method="post">
                        <label for="title">Nome da Categoria</label>
                        <input type="hidden" name="id" value="<%=category.id%>">
                        <input id="title" name="title" value="<%=category.title%>" class="form-control" type="text">
                        <button class="btn btn-success mt-3" type="submit">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>    

